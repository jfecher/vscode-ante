{
    "name": "ante",
    "displayName": "Ante",
    "description": "Ante language support for Visual Studio Code",
    "version": "0.1.0",
    "publisher": "jfecher",
    "repository": {
        "type": "git",
        "url": "https://github.com/jfecher/vscode-ante.git"
    },
    "keywords": [
        "language",
        "ante",
        "syntax",
        "highlighting"
    ],
    "main": "./out/extension",
    "homepage": "https://github.com/jfecher/vscode-ante",
    "galleryBanner": {
        "color": "#da4d4d",
        "theme": "dark"
    },
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ante",
                "aliases": [
                    "Ante",
                    "ante"
                ],
                "extensions": [
                    ".an"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ante",
                "scopeName": "source.ante",
                "path": "./syntaxes/ante.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Ante",
            "properties": {
                "ante.languageServerPath": {
                    "type": "string",
                    "default": "/opt/ante/target/release/ante-ls",
                    "description": "Path to the Ante language server executable"
                }
            }
        }
    },
    "dependencies": {
        "path": "^0.12.7"
    },
    "scripts": {
        "vscode:prepublish": "npm run build-base -- --minify",
        "build-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --target=node20",
        "build": "npm run build-base -- --sourcemap",
        "watch": "npm run build-base -- --sourcemap --watch",
        "typecheck": "tsc"
    },
    "devDependencies": {
        "@types/node": "^22.15.29",
        "@types/vscode": "^1.100.0",
        "esbuild": "^0.25.5",
        "typescript": "^5.8.3",
        "vscode-languageclient": "^9.0.1"
    }
}
